@{
    ViewData["Title"] = "Inicio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Gestión - Autobuses Mayitos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

        .sidebar h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #fff;
        }

        .sidebar .input-group {
            margin-bottom: 15px;
        }

        .sidebar button {
            width: 100%;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .content h1 {
            color: #343a40;
            margin-bottom: 20px;
        }

        .btn-outline-secondary {
            color: white;
            border-color: white;
        }

        .btn-outline-secondary:hover {
            background-color: white;
            color: #343a40;
        }

        .dropdown-menu {
            width: 100%;
        }

        .btn-danger {
            margin-top: 30px;
        }

        .welcome-section {
            text-align: center;
            padding: 50px 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px;
        }

        .welcome-section img {
            max-width: 200px;
            margin-bottom: 30px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Menú</h2>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Usuarios
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Usuarios/Registrar">Registrar</a></li>
                <li><a class="dropdown-item" href="/Usuarios/Modificar">Modificar</a></li>
                <li><a class="dropdown-item" href="/Usuarios/Eliminar">Eliminar</a></li>
            </ul>
        </div>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Autobuses
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Autobuses/Registrar">Registrar</a></li>
                <li><a class="dropdown-item" href="/Autobuses/Modificar">Modificar</a></li>
                <li><a class="dropdown-item" href="/Autobuses/Eliminar">Eliminar</a></li>
            </ul>
        </div>
        <div class="input-group mb-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                Informe
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Informe/Generar">Generar Informe</a></li>
            </ul>
        </div>
        <button type="button" class="btn btn-danger" onclick="cerrarSesion()">
            Cerrar Sesión
        </button>
    </div>

    <div class="content">
        <div class="welcome-section">
            <img src="~/images/noDisponible.jpg" alt="Logo Mayitos" class="mb-4">
            <h1>Bienvenido a Autobuses Mayitos</h1>
            <p class="lead">Viaja veloz y seguro, los más rápidos del estado de Sonora.</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script>
        function cerrarSesion() {
            Swal.fire({
                title: '¿Cerrar sesión?',
                text: "¿Está seguro que desea salir del sistema?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, cerrar sesión',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Login';
                }
            });
        }
    </script>
</body>
</html>
